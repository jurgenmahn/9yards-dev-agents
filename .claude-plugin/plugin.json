{
  "name": "9yards-dev-agents",
  "version": "1.3.0",
  "description": "Development agent sets for Python, Magento, PHP, JavaScript, and SysAdmin workflows with integrated testing, database management, and git automation",
  "author": {
    "name": "9Yards",
    "email": "info@9yards.nl",
    "url": "https://9yards.nl"
  },
  "homepage": "https://github.com/jurgenmahn/9yards-dev-agents",
  "repository": "https://github.com/jurgenmahn/9yards-dev-agents",
  "license": "MIT",
  "keywords": [
    "development",
    "magento",
    "python",
    "php",
    "javascript",
    "sysadmin",
    "agents",
    "database",
    "mysql",
    "postgresql"
  ],
  "commands": [
    "./commands/python.md",
    "./commands/magento.md",
    "./commands/php.md",
    "./commands/javascript.md",
    "./commands/js.md",
    "./commands/sysadmin.md"
  ],
  "agents": [
    "./agents/python/*.md",
    "./agents/magento/*.md",
    "./agents/php/*.md",
    "./agents/javascript/*.md",
    "./agents/sysadmin/*.md"
  ],
    "mcpServers": {
        "memory": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-memory"
            ],
            "env": {
                "MEMORY_FILE_PATH": "./.claude/memory-storage.json"
            }
        },
        "filesystem": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-filesystem",
                "./"
            ]
        },
        "git": {
            "command": "uvx",
            "args": [
                "mcp-server-git"
            ]
        },
        "fetch": {
            "command": "npx",
            "args": [
                "-y",
                "@tokenizin/mcp-npx-fetch"
            ]
        },
        "playwright": {
            "command": "npx",
            "args": [
                "@playwright/mcp@latest",
                "--viewport-size=${PLAYWRIGHT_VIEWPORT}",
                "--caps=vision,pdf",
                "--headless",
                "--isolated",
                "--no-sandbox",
                "--browser=${PLAYWRIGHT_BROWSER}",
                "--output-dir=./.claude/playwright",
                "--ignore-https-errors",
                "--save-session",
                "--use-fake-device-for-media-stream",
                "--use-fake-ui-for-media-stream",
                "--user-agent=${PLAYWRIGHT_USER_AGENT}"
            ]
        },
        "mysql-database": {
            "command": "npx",
            "args": [
                "@bytebase/dbhub",
                "--transport=stdio",
                "--dsn=${MYSQL_DSN}"
            ]
        },
        "postgres-database": {
            "command": "npx",
            "args": [
                "@bytebase/dbhub",
                "--transport=stdio",
                "--dsn=${POSTGRES_DSN}"
            ]
        }
    }  
}